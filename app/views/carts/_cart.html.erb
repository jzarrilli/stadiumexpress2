<% if cart.line_items.count > 0%>
	<div class="cart_title">Your Cart</div>
	<table>
	<%= render(cart.line_items) %>

		<tr>
			<td colspan="2">Total:</td>
			<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
		</tr>
	</table>
</br>

	<table width="5%">
		<tr class"buttons">
			<td><%= link_to image_tag("proceed_to_checkout.png", :border =>0), new_order_url, :method => :get%></td>

			<td><%= link_to image_tag("empty_cart.png", :border =>0), @cart, :method => :delete,
	:confirm => 'Are you sure you wish to empty cart?'%></td>

		</tr>
		
	</table>
	

<%end%>




