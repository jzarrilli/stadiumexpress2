<h2>Your Cart</h2>

	
<table>
	<%= render(@cart.line_items) %>
	
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
	
</table>

<%= button_to 'Empty cart', @cart, :method => :delete,
:confirm => 'Are you sure you wish to empty cart?' %>

<%= button_to 'Order More', store_index_url, :method => :get %>

<%= button_to 'Proceed to Checkout', new_order_url, :method => :get %>