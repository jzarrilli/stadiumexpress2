<div id="product_list">
	<h1>Product List</h1>
		<table> 
		<% @products.each do |product| %>
			<tr class="<%= cycle('list_line_odd', 'list_line_even') %>">	
				<td>		
					<%= image_tag(product.image_url, :class => 'list_image') %>
		        </td>

		        <td class="list_description"> 
					<dl>
						<dt><%= product.title %></dt> 
						<dd><%= number_to_currency(product.price) %></dd>
						<dd><%= truncate(strip_tags(product.description),
							:length => 80) %></dd>
					</dl> 
				</td>
			      	<td class="list_actions">
						<%= link_to image_tag("show.png", :border => 0), product %><br/>
						<%= link_to image_tag("edit.png", :border => 0), edit_product_path(product) %><br/>
						<%= link_to image_tag("destroy.png", :border => 0), product,
							:confirm => 'Are you sure?',
							:method => :delete %>
					</td> 
			</tr>
			<% end %>
		</table> 
</div>
	
	<br />

