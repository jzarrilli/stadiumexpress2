<!DOCTYPE html>
<html> <head>
<title>Stadium Express</title> 
<%= stylesheet_link_tag "scaffold" %> <%= stylesheet_link_tag "depot", :media => "all" %>
 <%= javascript_include_tag :defaults %> <%= csrf_meta_tag %>
</head> 

<body	id="store" >
	<div id="banner"> 
		<%= image_tag("logo1.jpg") %>
		<%= @page_title || "      Stadium Express" %>
		</div> 
		
		<div id="columns">
		
			<% if !session[:user_id] %>		
		
				<div id="side"> 
					<div id="cart">
						<% if @cart %>
						<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
							<%= render @cart %>
							<% end %>
						<% end %>
					</div>

					<%= link_to "Home", root_path%> <br/>
					<br/>
					<%= link_to "Vendor Login", login_path%> <br/>
				</div> 
			
				<div id="main">
					<%= yield %>
				</div>
			<% end %>
		
		
			<% if session[:user_id] %>
				<div id="side2"> 
			
					<%= link_to "User Home", root_path%> <br/>

					<%= link_to 'Orders',	orders_path	%><br />
					<%= link_to 'Products', products_path %><br />
					<%= link_to 'Users',	users_path	%><br />
					<%= button_to 'Logout', logout_path, :method => :delete	%>
				</div> 
		
				<div id="main2">
					<%= yield %>
				</div> 	
			<% end %>		
	</div>
		
</body> 
</html>
			
