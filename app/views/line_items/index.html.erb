<h1>Items in Queue</h1>

<table>
  <tr>
    <th>Name</th>    <th></th>
	<th>Product</th>    <th></th>
    <th>Quantity</th><th></th>
    <th>Status</th>

    <th>Order Status</th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
	<td><%= line_item.order.name %></td><td></td>
    <td><%= line_item.product.title %></td><td></td>
	<td><%= line_item.quantity %></td><td></td>
	<td><%= line_item.status %></td><td></td>
	<td><%= line_item.order.order_status %></td><td></td>
	
    <!-- <td><%= link_to 'Show', line_item %></td> -->
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Complete', line_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
