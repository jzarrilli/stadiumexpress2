<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="form">
	<div>
		<table>
			<tr>
				<td><img src="/images/name.png"></td>
				<td><%= f.text_area :name, :rows => 2%></td>
			</tr>
			<tr>
				<td><img src="/images/seatnumber.png"></td>
				<td><%= f.text_area :address, :rows => 2 %></td>
			</tr>
			<tr>
				<td><img src="/images/email.png"></td>
				<td><%= f.email_field :email, :size => 55 %></td>
			</tr>
			<tr>
				<td><img src="/images/paywith.png"></td>
				<td><%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => "Select a payment method" %></td>
			</tr>
		</table>
		</div>
		<table>
			<tr>
				<td><%= image_submit_tag('/images/placeorder.png')%></td>
			</tr>
		</table>

	<% end %>
</div>


