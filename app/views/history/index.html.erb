<h1>History</h1>

<table>
  <tr>
    <th>Name</th>    <th></th>
	<th>Product</th>    <th></th>
    <th>Quantity</th><th></th>
    <th>Price</th><th></th>
	<th>Date</th>

  </tr>

<% @line_items.each do |line_item| %>
  <tr>
	<td><%= line_item.order.name %></td><td></td>
    <td><%= line_item.product.title %></td><td></td>
	<td><%= line_item.quantity %></td><td></td>
	<td><%= number_to_currency(line_item.total_price) %></td>
	<td><%= @order.time.strftime('%d/%m/%y | %R') %></td>

	
	
    <td><%= link_to 'Show', order_path(line_item.order) %></td>

  </tr>
<% end %>
</table>

<br />
